rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // 사용자별 배경 이미지 업로드 허용
    match /backgrounds/{userId}/{allPaths=**} {
      // 본인만 읽기/쓰기 가능
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    // 기타 사용자 데이터
    match /{allPaths=**} {
      // 로그인한 사용자는 본인 폴더만 접근
      allow read, write: if request.auth != null;
    }
  }
}


