rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // 문의 관리 - 모든 사용자가 읽기/쓰기 가능
    match /inquiries/{document} {
      allow read, write: if request.auth != null;
    }
    
    // 템플릿 관리 - 모든 사용자가 읽기 가능, 인증된 사용자가 쓰기 가능
    match /templates/{document} {
      allow read: if true; // 모든 사용자가 템플릿 읽기 가능
      allow write: if request.auth != null; // 인증된 사용자만 쓰기 가능
    }
    
    // 사용자별 템플릿 사용 기록 - 본인 것만 접근 가능
    match /userTemplates/{document} {
      allow read, write: if request.auth != null && request.auth.uid == resource.data.userId;
    }
    
    // 기타 문서들 - 기본적으로 인증된 사용자만 접근
    match /{document=**} {
      allow read, write: if request.auth != null;
    }
  }
}

